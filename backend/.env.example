# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your-secret-key-change-this-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Wazuh API Configuration (for management, agents, rules)
WAZUH_API_URL=https://your-wazuh-server:55000
WAZUH_API_USER=your-wazuh-username
WAZUH_API_PASSWORD=your-wazuh-password
# Set to 'false' if using self-signed certificates (development only)
WAZUH_VERIFY_SSL=false

# Wazuh Indexer API Configuration (for alerts and events - Elasticsearch/OpenSearch)
WAZUH_INDEXER_URL=https://your-wazuh-indexer:9200
WAZUH_INDEXER_USER=admin
WAZUH_INDEXER_PASSWORD=SecretPassword
WAZUH_INDEXER_VERIFY_SSL=false

# IRIS (DFIR-IRIS) Configuration
IRIS_API_URL=https://your-iris-server
IRIS_API_KEY=your-iris-api-key
IRIS_VERIFY_SSL=false

# Shuffle Configuration
SHUFFLE_API_URL=https://your-shuffle-server
SHUFFLE_API_KEY=your-shuffle-api-key
SHUFFLE_VERIFY_SSL=false

# MISP Configuration
MISP_API_URL=https://your-misp-server
MISP_API_KEY=your-misp-api-key
MISP_VERIFY_SSL=false
# Auth
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
# Polling Configuration (in seconds)
ALERT_POLL_INTERVAL=15
LOG_STREAM_BATCH_SIZE=100
